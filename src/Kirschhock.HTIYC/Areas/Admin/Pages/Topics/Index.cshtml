@page
@model Kirschhock.HTIYC.Areas.Admin.Topics.IndexModel
@{
}

@section TitleContent {
    Topics
}

@section Toolbar{
    <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-success">Add</button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Display Name <small>(Name)</small></th>
                <th>Description</th>
                <th>Count Topics</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model.Items)
            {
                <tr>
                    <td>@topic.Id</td>
                    <td>@topic.DisplayName <small>(@topic.Name)</small></td>
                    <td>@topic.Description</td>
                    <td>@topic?.Facts?.Count() ?? 0</td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>