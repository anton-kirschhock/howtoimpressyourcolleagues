@page
@model Kirschhock.HTIYC.Areas.Admin.Topics.IndexModel
@{
}

@section TitleContent {
    Topics
}

@section Toolbar{
<div class="btn-group me-2">
    <a asp-page="Add" class="btn btn-sm btn-outline-success">Add</a>
</div>
}

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Display Name <small>(Name)</small></th>
                <th>Description</th>
                <th colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model.Items)
            {
                <tr>
                    <td>
                        <a asp-page="Edit" asp-route-Id="@topic.Id">@topic.Id</a>
                    </td>
                    <td>
                        @topic.DisplayName
                        @if (!string.IsNullOrWhiteSpace(topic.Name))
                        {
                            <small>(@topic.Name)</small>
                        }
                    </td>
                    <td>@topic.Description</td>
                    <td>
                        <a asp-page="Facts" asp-route-TopicId="@topic.Id">Manage facts</a>
                    </td>
                    <td>
                        <a asp-page="Delete" asp-route-TopicId="@topic.Id">Delete Topic</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>